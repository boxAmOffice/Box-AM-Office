@model IEnumerable<boxAmOffice.Models.Actor>

@{ ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml"; }

<h1><span>A</span>ctors</h1>
<hr />

<p>
    @if (User.Identity.IsAuthenticated && User.IsInRole("Administrator") || User.IsInRole("Editor"))
    {
    <p>

        <a class="btn btn-outline-success justify-content-xl-center" asp-action="Create">
            <i class="bi bi-plus-circle"></i> Add New Actors
        </a>
    </p>
}
    <div class="row justify-content-around">

        @foreach (var item in Model)
        {
            <div class="card mb-3" style="max-width: 520px;">
                <div class="row g-0">
                    <div class="col-md-4">
                        <img src="@item.ProfilePictureURL" class="img-fluid rounded-start" alt="...">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h4 class="card-title">@item.FullName</h4>
                            <p class="card-text"> @item.Bio</p>
                            <br>
                        </div>
                        <div>
                            @if (User.Identity.IsAuthenticated && User.IsInRole("Administrator"))
                            {
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary">
                                    <i class="bi bi-pencil-square"></i>
                                    Edit
                                </a>}
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-warning">
                                <i class="bi bi-info"></i>

                                Details
                            </a>
                            @if (User.Identity.IsAuthenticated && User.IsInRole("Administrator"))
                            {
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">
                                    <i class="bi bi-x"></i>

                                    Delete
                                </a>}
                        </div>
                    </div>

                </div>
            </div>
        }
    </div>


    <style>
        h1 {
            text-shadow: 2px 2px;
            margin: 0 0 25px 50px;
        }

            h1 > span {
                color: red;
            }
    </style>
