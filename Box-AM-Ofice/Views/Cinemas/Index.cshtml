@*Define Model*@
@using boxAmOffice.Models
@model IEnumerable<Cinema>
@*Define ViewData, data in browser tab*@

@{

    ViewData["Title"] = "List of Cinemas";

}


<h1><span>C</span>inemas</h1>
<hr />

@if (User.Identity.IsAuthenticated && User.IsInRole("Administrator") || User.IsInRole("Editor"))
{
    <p>

        <a class="btn btn-outline-dark justify-content-xl-center" asp-action="Create">
            <i class="bi bi-plus-circle"></i> Add New Actors
        </a>
    </p>
}
<div class="cinema-container">
	@foreach (var item in Model)
	{
		<div class="card">
			<img class="card-img-top" src="@item.Logo" alt="Card image cap" style="width: 285px;
    height: 215px;">
			<div class="card-body">
				<h5 class="card-title">@item.Name</h5>
				<p class="card-text">@item.Description.</p>
                <div class="links">
                    <a class="btn btn-outline-secondary" asp-action="AllMovies">Movies</a>
                    <br>
                    @if (User.IsInRole("Administrator"))
                    {

                        <a class="text-primary" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i>Edit</a>
                        <a class="text-info" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-eye"></i>Details</a>
                        <a class="text-danger" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i>Delete</a>

                    }
                </div>
            </div>
        </div>
    }
</div>
@await Html.PartialAsync("_CreateItem", "Cinemas")

<style>
    h1 {
        text-shadow: 2px 2px;
        margin: 0 0 25px 50px;
    }

        h1 > span {
            color: red;
        }

    .cinema-container {
        display: flex;
        flex-direction: row;
        flex-wrap: wrap;
        justify-content: flex-start;
    }

    .card {
        width: 18rem;
        margin: 25px 50px;
        position: relative;
    }

    .links {
        position: absolute;
        bottom: 10px;
        right: 10px;
        margin-top: 100px;
    }

    .movies-btn {
        border: 1px solid black;
        padding: 5px 20px;
        background-color: #111;
        color: #eee;
        font-size: 20px;
        border-radius: 5px;
    }

        .movies-btn:hover {
            text-decoration: none;
            /*background-color: #231955;*/
            background-color: #A10035;
            color: #eee;
            transition: .2s;
        }
</style>

