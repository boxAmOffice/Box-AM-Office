@model IEnumerable<boxAmOffice.Models.Movie>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
<link href="~/css/style3.css" rel="stylesheet" />

@{ Layout = "_Layout";
    ViewData["Title"] = "Home Page"; }

<div class="row d-flex justify-content-center my-4 py-5">
    <div class="column  border-bottom-0">
        <img style="max-width:450px;" src="https://cdn.pixabay.com/photo/2016/04/01/10/56/camera-1300107_960_720.png" />
    </div>
    <div class="column  border-bottom-0">




        <div style="margin:25px;padding:25px">
            <div class="text-dark">
                <h1 class="display-1" style="font-family: Impact; color:red;">AM <span class="display-4 text-dark">BOX OFFICE</span></h1>
                <h5 class="text-muted">A place where you can find movies you love!</h5>
                <h5 class="text-muted">Pick your ticket NOW!</h5>
                <br />
                <a class="cinema-btn btn btn-secondary" asp-controller="Movies" asp-action="Index"><i class="bi bi-film"></i> Movies</a>
            </div>
        </div>
    </div>

</div>

<div class="services" id="services">
    <h1 class="title">
        Now Showing
    </h1>
    <p>Learn about the newest movies and find theater showtimes near you</p>
    <div class="diff_services">
        <div class="diff_services_item">
            <img src="https://sultan.blob.core.windows.net/attac/Around-the-World-in-80-Days.jpg" alt="service_image">
            <h3 class="sub_title">Around the World in 80 Days</h3>
            <p>
                A bookish marmoset embarks on a wild adventure to travel around the planet in 80 days after accepting a challenge from a greedy frog
            </p>
        </div>
        <div class="diff_services_item">
            <img src="https://sultan.blob.core.windows.net/attac/Minions.jpg" alt="service_image">
            <h3 class="sub_title">Minions: The Rise of Gru</h3>
            <p>
                The untold story of one twelve-year-old's dream to become the world's greatest supervillain
            </p>
        </div>
        <div class="diff_services_item">
            <img src="https://sultan.blob.core.windows.net/attac/Infiltration.png" alt="service_image">
            <h3 class="sub_title">Infiltration</h3>
            <p>
                Ivan sets off on a dangerous mission into Syria to save his ex-commander Grey after his capture by ISIS. With the help of U.S. military patrols, he succeeds in freeing Grey and attempts to escape the country while being hunted by terrorists
            </p>
        </div>
    </div>
    <div class="btn">
        <a asp-controller="Movies" asp-action="Index"><i class="bi bi-film"></i>All  Movies</a>
    </div>
</div>
<div class="contactus" id="contactus">
    <h1 class="title">contact us</h1>
    <div class="form_wrapper">
        <div class="form_input">
            <input type="text" placeholder="Email">
        </div>
        <div class="form_input">
            <input type="text" placeholder="Subject">
        </div>
        <div class="form_input">
            <textarea placeholder="Message"></textarea>
        </div>
        <div class="btn">
            <a href="#">Submit</a>
        </div>
    </div>
</div>


<div class="ourteam" id="ourteam">
    <h1 class="title">our team</h1>
    <div class="ourteam_wrapper">
        <div class="team-1 team">
            <div class="team_members" data-name="nathan john"><img src="~/images/sultan.png" alt="Team_Images"></div>
            <div class="team_members" data-name="Alyssa Healy"><img src="~/images/hamza.png" alt="Team_Images"></div>
            <div class="team_members" data-name="Alec Stewart"><img src="~/images/islam.png" alt="Team_Images"></div>
            <div class="team_members" data-name="Michael Rippon"><img src="~/images/hanen.png" alt="Team_Images"></div>
        </div>

    </div>
    <div class="btn">
        <a asp-controller="Home" asp-action="AboutUs">Learn More</a>
    </div>
</div>