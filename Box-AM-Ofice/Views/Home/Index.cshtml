@model IEnumerable<boxAmOffice.Models.Movie>
<link rel="stylesheet" href="~/css/Homepage.css" />

@{
	Layout = "_Layout";
	ViewData["Title"] = "Home Page";
}
 <div id="myCarousel" class="carousel slide carousel-fade " data-ride="carousel" data-mdb-ride="carousel">
    
      <!--Slides-->
    <div class="carousel-inner" role="listbox">
        @{
        var first = true;
    }
                  @foreach (var item in Model)
    {
        <div class="carousel-item card-overlay @(first?Html.Raw("active"):Html.Raw(""))">
              <img class="d-block w-100" src="@item.ImageURL"
                   alt="Card image cap" style="height:540px">
                    <div class="carousel-caption d-none d-md-block">
        <a class="movie-btn  text-center" asp-controller="Movies" asp-action="Index"><i class="bi bi-film"></i> All Movies</a>
          </div>

                     </div>
    
        first = false;
    }
</div>
<a class="carousel-control-prev" href="#myCarousel" role="button"
                                 data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
</a>
<a class="carousel-control-next" href="#myCarousel" role="button"
                                 data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
</a>
</div>

<div class=" main" style="margin-top:30px">
  <div class="row">
    <div class="column">
      <div class="text-white">
<h1 class="display-1">About </h1>
<p style="line-height: 35px">AM box office is the first home-grown cinema brand and the 
    market leader in terms of screen count in the hashemite kingdom of Jordan. 
    Established in 2022 with headquarters in Amman, it is owned and operated by Am box office Cinemas Co. 
    AM box office continues its expansion plan in the upcoming years across the kingdom offering state-of-the-art technology, diverse and immersive experiences combined with unlimited options from our delicious menu to give 
    moviegoers complete and exceptional cinema experience.</p>
      </div>
    </div>
    <div style="margin:25px;padding:25px">
          
	<div class="text-white">
		<h1 class="display-1">AM <span class="display-4">BOX OFFICE</span></h1>
		<p>A place where you can find movies you love!</p>
		<p>Pick your ticket NOW!</p>
        <a class="cinema-btn" asp-controller="Cinemas" asp-action="Index"><i class="bi bi-camera-reels"></i> Cinemas</a>
    </div>
    </div>
  </div>
  </div>
  

 