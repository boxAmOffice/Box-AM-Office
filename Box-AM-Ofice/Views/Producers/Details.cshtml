@model boxAmOffice.Models.Producer

@{
    ViewData["Title"] = "Details";
}

<div class="row">
    <div class="col-md-6 offset-2">
        <div class="card mb-12">
            <div class="row g-0">
                <div class="col-md-12">
                    <div class="card-header text-white bg-dark">
                        <p class="card-text">
                            <h3 class="card-title">
                                @Model.FullName
                            </h3>
                        </p>
                    </div>
                </div>
                <div class="col-md-4">
                    <img src="@Model.ProfilePictureURL" style="max-width: 190px;" alt="@Model.FullName">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <H4 class="card-text">@Model.Bio</H4>

                    </div>
                </div>
                <div class="col-md-12">
                    <div class="card-footer">
                        <p class="card-text">
                            <a asp-action="Index" class="btn btn-outline-warning float-right">
                                <i class="bi bi-arrow-counterclockwise"></i>
                                Back to Producers
                            </a>
                            <a asp-controller="Movies" asp-action="GetMoviesByProducerId" asp-route-id="@Model.Id" class="btn btn-outline-dark">
                                <i class="bi bi-film"></i>

                                Movies
                            </a>
                            @if (User.Identity.IsAuthenticated && User.IsInRole("Administrator"))
                            {

                                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary">
                                    <i class="bi bi-pencil-square"></i>
                                    Edit
                                </a>
                            }

                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

