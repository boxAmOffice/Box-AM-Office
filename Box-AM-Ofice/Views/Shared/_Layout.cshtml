<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Box_AM_Ofice</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/NavBar.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css">

</head>
<body>
    <nav>
        <button class="openbtn">&#9776;<span class="am">AM</span> BOX OFFICE</button>
        <div id="mySidebar" class="sidebar">
            <a href="javascript:void(0)" class="closebtn">&times;</a>
            <a asp-controller="Home" asp-action="Index"><i class="bi bi-house"></i> Home</a>
            <a asp-controller="Cinemas" asp-action="Index"><i class="bi bi-camera-reels"></i> Cinemas</a>
            <a asp-controller="Movies" asp-action="Index"><i class="bi bi-film"></i> Movies</a>
            <a asp-controller="Producers" asp-action="Index"><i class="bi bi-headset"></i> Producers</a>
            <a asp-controller="Actors" asp-action="Index"><i class="bi bi-person-square"></i> Actors</a>
            <a asp-controller="Home" asp-action="AboutUs"><i class="bi bi-person-lines-fill"></i> About Us</a>

        </div>

        <div class="right-side">

            <form class="form-inline my-2 my-lg-0" asp-controller="Movies" asp-action="Search" style="padding-right: 20px;">
                <input name="searchString" type="text" class="form-control" placeholder="Search for a movie..." aria-label="Recipient's username" aria-describedby="button-addon2">
                <button class="btn btn-outline-dark my-2 my-sm-0" type="submit"><i class="bi bi-search"></i></button>
            </form>
            @if (User.Identity.IsAuthenticated && !User.IsInRole("Administrator"))
            {
                <ul class="navbar-nav">
                    @await Component.InvokeAsync("ShoppingCartSummary")
                </ul>
            }
            <partial name="_Identity.cshtml" />

        </div>
    </nav>
    <div class="container-fluid">

        <main role="main">
            @RenderBody()
        </main>
    </div>
    <footer class="text-center text-lg-start text-light" style="background-color:#111;margin-top: 40px;">

        <div class="container text-center text-md-start">
            <div class="row ">
                <div class="col-md-3 col-lg-4 col-xl-3 mx-auto mb-4" style="margin-top:25px;margin-bottom:25px">
                    <h6 class="text-uppercase fw-bold mb-4">
                        <i class="fas fa-gem me-3"></i> AM BOX OFFICE
                    </h6>

                </div>
                <div class="col-md-3 col-lg-2 col-xl-2 mx-auto mb-4" style="margin-top:25px;margin-bottom:25px">

                </div>

                <div class="col-md-4 col-lg-3 col-xl-3 mx-auto mb-md-0 mb-4" style="margin-top:25px;margin-bottom:25px">
                    <h6 class="text-black-50 fw-bold mb-4">

                        <a asp-controller="Home" asp-action="AboutUs">Our Team</a>
                    </h6>

                </div>
            </div>
        </div>

        <div class="text-center p-4" style="background-color: rgba(0, 0, 0, 0.05);">
            © 2022 Copyright: AM BOX OFFICE
        </div>
    </footer>
 
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    @await Component.InvokeAsync("NToastNotify")

    <script>

        document.getElementsByClassName("openbtn")[0].addEventListener("click", openNav);
        document.getElementsByClassName("closebtn")[0].addEventListener("click", closeNav);

        /* Set the width of the sidebar to 250px and the left margin of the page content to 250px */
        function openNav() {
            document.getElementById("mySidebar").style.width = "250px";
            document.getElementById("main").style.marginLeft = "250px";
            this.style.border = "none !important";
            this.style.outline = "none !important";
        }

        /* Set the width of the sidebar to 0 and the left margin of the page content to 0 */
        function closeNav() {
            document.getElementById("mySidebar").style.width = "0";
            document.getElementById("main").style.marginLeft = "0";
        }

    </script>
</body>
</html>
