<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Box_AM_Ofice</title>
    <link href="~/css/footer.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/NavBar.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css">
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css">


</head>
<body>
    <nav>
        <button class="openbtn">&#9776;<span class="am">AM</span> BOX OFFICE</button>
        <div id="mySidebar" class="sidebar">
            <a href="javascript:void(0)" class="closebtn">&times;</a>
            <a asp-controller="Home" asp-action="Index"><i class="bi bi-house"></i> Home</a>
            <a asp-controller="Cinemas" asp-action="Index"><i class="bi bi-camera-reels"></i> Cinemas</a>
            <a asp-controller="Movies" asp-action="Index"><i class="bi bi-film"></i> Movies</a>
            <a asp-controller="Producers" asp-action="Index"><i class="bi bi-headset"></i> Producers</a>
            <a asp-controller="Actors" asp-action="Index"><i class="bi bi-person-square"></i> Actors</a>
            <a asp-controller="Home" asp-action="AboutUs"><i class="bi bi-person-lines-fill"></i> About Us</a>

        </div>

        <div class="right-side">

            <form class="form-inline my-2 my-lg-0" asp-controller="Movies" asp-action="Search" style="padding-right: 20px;">
                <input name="searchString" type="text" class="form-control" placeholder="Search for a movie..." aria-label="Recipient's username" aria-describedby="button-addon2">
                <button class="btn btn-outline-dark my-2 my-sm-0" type="submit"><i class="bi bi-search"></i></button>
            </form>
            @if (User.Identity.IsAuthenticated && !User.IsInRole("Administrator"))
            {
                <ul class="navbar-nav">
                    @await Component.InvokeAsync("ShoppingCartSummary")
                </ul>
            }
            <partial name="_Identity.cshtml" />

        </div>
    </nav>
    <div class="container-fluid">

        <main role="main">
            @RenderBody()
        </main>
    </div>
    
    <footer class="footer" style="margin-top:40px;">

        <div class="container">
            <div class="row">
                <div class="footer-col">
                    <h4>company</h4>
                    <ul>
                        <li>
                            <a asp-controller="Home" asp-action="AboutUs">Our Team</a>
                        </li>
                        <li><a asp-controller="Movies" asp-action="Index">our services</a></li>
                    </ul>
                </div>
                <div class="footer-col">
                    <h4>get help</h4>
                    <ul>
                        <li><a asp-controller="Movies" asp-action="Index">shipping</a></li>
                        <li><a asp-controller="Orders" asp-action="ShoppingCart">order status</a></li>
                    </ul>
                </div>
                <div class="footer-col">
                    <h4>online shop</h4>
                    <ul>
                        <li><a asp-controller="Movies" asp-action="Index">Movies</a></li>
                    </ul>
                </div>
                <div class="footer-col">
                    <h4>follow us</h4>
                    <div class="social-links">
                        <a href="https://www.facebook.com/sultan.kanaan.5"><i class="fab fa-facebook-f"></i></a>
                        <a href="https://twitter.com/sultan_kanaan?t=WH4Whyq3upTwsmG14zKczQ&s=09"><i class="fab fa-twitter"></i></a>
                        <a href="https://github.com/sultan-kanaan?tab=repositories"><i class="fab fa-instagram"></i></a>
                        <a href="https://www.linkedin.com/in/sultan-kanaan-14b68b192/"><i class="fab fa-linkedin-in"></i></a>
                    </div>
                </div>

            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    @await Component.InvokeAsync("NToastNotify")

    <script>

        document.getElementsByClassName("openbtn")[0].addEventListener("click", openNav);
        document.getElementsByClassName("closebtn")[0].addEventListener("click", closeNav);

        /* Set the width of the sidebar to 250px and the left margin of the page content to 250px */
        function openNav() {
            document.getElementById("mySidebar").style.width = "250px";
            document.getElementById("main").style.marginLeft = "250px";
            this.style.border = "none !important";
            this.style.outline = "none !important";
        }

        /* Set the width of the sidebar to 0 and the left margin of the page content to 0 */
        function closeNav() {
            document.getElementById("mySidebar").style.width = "0";
            document.getElementById("main").style.marginLeft = "0";
        }

    </script>
</body>
</html>
